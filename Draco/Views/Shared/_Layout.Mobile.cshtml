<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width"/>
    @Styles.Render("~/Content/Mobile/css", "~/Content/jquerymobile/css")
    @Scripts.Render("~/bundles/jquery", "~/bundles/jquerymobile")

    <script>
        $(document).ready(function () {
            $.mobile.ajaxEnabled = true;
        });
    </script>

    @RenderSection("head", required: false)
</head>
<body>
    <div data-role="page" id="home" data-theme="a">

        <div data-role="header"  data-position="inline">
           @RenderSection("logo", required: false)
            <a class="ui-btn-right" href='@Url.Action("Home", "League", new { accountId = ViewData["AccountId"] })' data-icon="home">Home</a><br /><br />
        </div>

        <div data-role="menu">
            <ul data-role="listview">
        	    @RenderSection("menu", required: false)
            </ul>
        </div>

        <div data-role="content">
            @RenderSection("featured", false)
            @RenderBody()
        </div>

    	<div data-role="footer">
            <div class="view-switcher" style="float:left">
                <p>&copy; @DateTime.Now.Year - ezRecSports.com</p>
            </div>
            <div style="float:right">
                <p>@Html.Partial("_ViewSwitcher")</p>
            </div>
        </div>

    </div>

    @RenderSection("additionalPages", required: false)

</body>
</html>
