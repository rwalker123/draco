@using SportsManager.Controllers
@model long

@{
    long accountType = 0;

    // load sitemap for accountType
    var c = ViewContext.Controller as DBController;
    if (c != null)
    {
        accountType = c.GetAccountTypeFromAccountId(Model);
    }
    IEnumerable<SportsManager.Models.Helpers.MenuHelper.MenuItem> menuNodes = SportsManager.Models.Helpers.MenuHelper.GetAccountHomeTypeMenu(accountType, Model);
}

@if (menuNodes.Any())
{
    foreach (SportsManager.Models.Helpers.MenuHelper.MenuItem node in menuNodes)
    {
	    <li><a href='@node.Url'>@node.Title</a></li>
    }
}