
@model SportsManager.Baseball.ViewModels.ScheduleViewModel
@using System.Web.Optimization

@{
	ViewBag.Title = Model.AccountName + " Schedule";
}

@section head {
<link href="~/Content/print.css" rel="stylesheet" type="text/css" media="print" />
}

<div class="jumbotron">
    @Header.DisplayHeader("Schedule", Model.AccountName, Model.AccountLogoUrl)
    <a class="btn btn-info noPrint" href="javascript:window.print();"><span class="glyphicon glyphicon-print"></span></a>
</div>

@if (Model.TwitterError != null)
{
    <div class="alert alert-danger alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <strong>Twitter Posting Error:</strong> @Model.TwitterError
        <p>After fixing the error, you must update the game result to send out the tweet.</p>
    </div>
}
<div id="schedule" class="container-fluid">
    <div class="modal fade" id="gameRecapModal" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title">Game Recap</h4>
                </div>
                <div class="modal-body" style="max-height: 400px;overflow:auto">
                    <ul id="statsTab" class="nav nav-tabs">
                        <li class="active"><a href="#homeTeam" data-toggle="tab"><span data-bind="html: homeTeamName"></span></a></li>
                        <li><a href="#awayTeam" data-toggle="tab"><span data-bind="html: awayTeamName"></span></a></li>
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane fade in active" id="homeTeam">
                            <span data-bind="html: homeGameSummary"></span>
                        </div>
                        <div class="tab-pane fade" id="awayTeam">
                            <span data-bind="html: awayGameSummary"></span>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-primary" data-dismiss="modal"><span class="glyphicon glyphicon-ok"></span></button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    @if (Model.IsAdmin)
    {
    <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="deleteModalLabel">Confirm Delete Game</h4>
                </div>
                <div class="modal-body" id="deleteModalBody">
                    You are about to delete a game. All data, including statistics, will be deleted. You cannot undo this operation. Are you sure you want to continue?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal" id="confirmDeleteBtn">Continue</button>
                    <button type="button" class="btn btn-primary" data-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>
    }
    <div class="row noPrint">
        <select data-bind="selectPicker: selectedLeague" data-container="body" id="leagueSelect">
            @foreach (var l in Model.Leagues)
            {
                <option value="@l.Id">@l.League.Name</option>
            }
            <option value="0">All Leagues</option>
        </select>
        <select data-container="body" data-bind="selectPicker: selectedTeam, attr: {'disabled': leagueTeamSelectDisabled }, selectPickerOptions: { optionsArray: leagueTeams, disabledCondition: loadingSchedule() || !viewMode() }, optionsText: 'Name', optionsValue: 'Id', optionsCaption: 'All teams'"></select>

    </div>

    @if (Model.IsAdmin)
    { 
        <div data-bind="if: $root.selectedLeague() == 0">
            <div class="alert alert-warning">
                To add or edit a game, please select a league.
            </div>
        </div>
    }
    
    <ul class="pager noPrint">
        <li data-bind="attr: { 'class': loadingSchedule() || !viewMode() ? 'previous disabled noPrint' : 'previous noPrint' }"><a data-bind="click: goPreviousMonth" href="#">&larr; Previous</a></li>
        <li>
            <span class="currentDate h1" style="margin: 0px; cursor: pointer" data-bind="html: currentMonth"></span>
        </li>
        <li data-bind="attr: { 'class': loadingSchedule() || !viewMode() ? 'next disabled noPrint' : 'next noPrint' }"><a data-bind="click: goNextMonth" href="#">Next &rarr;</a></li>
    </ul>
    <div class="printOnly">
        <!-- ko if: $root.selectedLeague() != 0 -->
        <h2><span data-bind="html: selectedLeagueName"></span> <span data-bind="html: selectedTeamName"></span></h2>
        <!-- /ko -->
        <h3 data-bind="html: currentMonth"></h3>

    </div>

        <div class="noPrint">
            <ul class="nav nav-pills">
                <li data-bind="css: { active: !$root.isListDefaultView() }"><a href="#calendar" data-bind="click: calendarViewSelected" data-toggle="tab"><span class="glyphicon glyphicon-calendar"></span> Calendar View</a></li>
                <li data-bind="css: { active: $root.isListDefaultView() }"><a href="#list" data-bind="click: listViewSelected" data-toggle="tab"><span class="glyphicon glyphicon-list"></span> List View</a></li>
            </ul>
        </div>

        <div data-bind="visible: loadingSchedule">
            <i class="fa fa-spinner fa-spin fa-2x"></i> Loading schedule...
        </div>

        @if (Model.IsAdmin)
        {
            <form class="form-horizontal" role="form" style="display:none" data-bind="with: editingGame, visible: $root.addGameMode">
                <h4 class="col-md-offset-3" data-bind="html: $root.gameEditorTitle"></h4>
                <div class="form-group">
                    <label for="newGameDate" class="col-md-3 control-label">Game Date:</label>
                    <div class="col-md-9">
                        <input id="newGameDate" class="form-control" type="text" data-bind="datepicker: GameDate.DateText, datepickerOptions: {format: 'M dd, yyyy', autoclose: true, startView: 0 }" />
                    </div>
                    <label for="newGameTime" class="col-md-3 control-label">Game Time:</label>
                    <div class="col-md-9">
                        <div class="bootstrap-timepicker">
                            <input id="newGameTime" class="form-control add-on" type="text" data-bind="timepicker: GameDate.TimeText, timepickerOptions: { template: false, minuteStep: 5, showInputs: false }" />
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label for="newGameAwayTeam" class="col-md-3 control-label">Away Team:</label>
                    <div class="col-md-9" data-bind="validationOptions: { insertMessages: false }">
                        <select id="newGameAwayTeam" data-bind="selectPicker: AwayTeamId, selectPickerOptions: { optionsArray: $root.leagueTeams }, optionsText: 'Name', optionsValue: 'Id', optionsCaption: 'select team...'"></select>
                    </div>
                    <label for="newGameHomeTeam" class="col-md-3 control-label">Home Team:</label>
                    <div class="col-md-9">
                        <select id="newGameHomeTeam" data-bind="selectPicker: HomeTeamId, selectPickerOptions: { optionsArray: $root.leagueTeams }, optionsText: 'Name', optionsValue: 'Id', optionsCaption: 'select team...'"></select>
                    </div>
                </div>
                <div class="form-group">
                    <p class="col-md-offset-3 col-md-9 alert alert-danger" data-bind="validationMessage: AwayTeamId"></p>
                </div>

                <div class="form-group">
                    <label for="newGameType" class="col-md-3 control-label">Game Type:</label>
                    <div class="col-md-9">
                        <select id="newGameType" data-bind="selectPicker: GameType">
                            <option value="0">Regular</option>
                            <option value="1">Playoff</option>
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <label for="newGameField" class="col-md-3 control-label">Field:</label>
                    <div class="col-md-9">
                        <select id="newGameField" data-bind="selectPicker: FieldId">
                            <option value="0">select field...</option>
                            @foreach (var f in Model.Fields)
                            {
                                <option value="@f.Id">@f.Name</option>
                            }
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <label for="newGameUmpires" class="col-md-3 control-label">Umpires:</label>
                    <div class="col-md-9">
                       <select id="newGameUmpires" data-bind="selectPicker: Umpires, selectPickerOptions: { optionsArray: $root.allUmpires }, optionsText: 'Name', optionsValue: 'Id'" multiple title="select umpires..."></select>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-3 col-md-9">
                        <button class="btn btn-success" data-bind="click: $root.addGame"><span class="glyphicon glyphicon-ok"></span></button>
                        <button class="btn btn-danger" data-bind="click: $root.cancelAddGame"><span class="glyphicon glyphicon-remove"></span></button>
                    </div>
                </div>
            </form>

            Html.RenderPartial("EnterGameResults", new SportsManager.Baseball.ViewModels.EnterGameResults()
            {
                ShowTweetResults = Model.EnableTweet,
                TrackGamesPlayed = Model.TrackGamesPlayed
            });
        }

    <div class="tab-content" data-bind="visible: viewMode() && !loadingSchedule()">
        <div class="tab-pane fade" data-bind="css: { 'in active': !$root.isListDefaultView() }" id="calendar">
            <div data-bind="foreach: gameMonth">
                <div data-bind="foreach: $data">
                    <div style="display: inline-block; width: 13%; min-width: 150px; vertical-align: top;">
                        <div class="list-group">
                            <div class="list-group-item list-group-item-info">
                                <span data-bind="html: dayOfWeek"></span>
                                <span data-bind="html: monthName"></span>
                                <span data-bind="html: monthDayNumber"></span>
                                @if (Model.IsAdmin)
                                {
                                    <button class="btn btn-default btn-xs noPrint pull-right" title="create game" data-bind="visible: $root.selectedLeague() > 0, click: $root.enterAddGameMode"><span class="glyphicon glyphicon-plus"></span></button>
                                }
                            </div>
                            <!-- ko if: games().length == 0 -->
                            <div class="list-group-item">
                                <i>no games scheduled</i>
                            </div>
                            <!-- /ko -->
                            <div class="list-group" data-bind="foreach: games">
                                <div class="list-group-item" style="padding: 0px 0px 0px 0px">
                                    @if (Model.IsAdmin)
                                    {
                                        <div class="btn-group pull-right noPrint" style="margin: 2px">
                                            <button type="button" class="btn btn-default dropdown-toggle btn-xs" data-toggle="dropdown">
                                                <span class="glyphicon glyphicon-edit"></span> <span class="caret"></span>
                                            </button>
                                            <ul data-container="body" class="dropdown-menu" role="menu">
                                                <li><a data-bind="visible: $root.selectedLeague() > 0, click: $root.editGame"><span class="glyphicon glyphicon-edit"></span> edit</a></li>
                                                <li><a data-bind="click: $root.deleteGame"><span class="glyphicon glyphicon-remove"></span> delete</a></li>
                                                <li class="divider"></li>
                                                <li><a data-bind="click: $root.enterGameResults" title="enter game results"><span class="glyphicon glyphicon-bullhorn"></span> result</a></li>
                                            </ul>
                                        </div>
                                    }

                                    <div class="table-responsive">
                                        <table class="table-condensed">
                                            <tbody>
                                                <!-- ko if: $root.selectedLeague() == 0 -->
                                                <tr>
                                                    <td data-bind="html: LeagueName"></td>
                                                </tr>
                                                <!-- /ko -->
                                                <tr>
                                                    <td>
                                                        <table style="width: 100%" class="table-condensed">
                                                            <tr>
                                                                <td><a data-bind="trimText: AwayTeamName, trimTextLength: 10, attr: {title: AwayTeamName, href: AwayTeamId.href}"></a></td>
                                                                <td><span data-bind="visible: GameStatus.isFinalScore, html: AwayScore"></span></td>
                                                                <!-- ko if: GameStatus.isFinal -->
                                                                <td>
                                                                    <span class="col-sm-12" data-bind="html: GameStatus.Text"></span>
                                                                </td>
                                                            <!-- /ko -->
                                                            </tr>
                                                            <tr>
                                                                <td><a data-bind="trimText: HomeTeamName, trimTextLength: 10, attr: {title: HomeTeamName, href: HomeTeamId.href}"></a></td>
                                                                <td><span data-bind="visible: GameStatus.isFinalScore, html: HomeScore"></span></td>
                                                            </tr>
                                                        </table>
                                                    </td>
                                                </tr>
                                                <!-- ko if: !GameStatus.isFinal() && FieldName()-->
                                                <tr>
                                                    <td><a data-bind="trimText: FieldName, trimTextLength: 15, attr: {title: FieldName, href: FieldId.href}"></a></td>
                                                </tr>
                                                <!-- /ko -->
                                                <!-- ko ifnot: GameStatus.isFinal -->
                                                <tr>
                                                    <td><span data-bind="html: GameDate.TimeText"></span></td>
                                                </tr>
                                                <!-- /ko -->
                                                <!-- ko if: HasGameRecap -->
                                                <tr class="noPrint">
                                                    <td>
                                                        <a class="btn btn-success btn-xs" data-bind="click: $root.popupGameRecap">recap</a>
                                                    </td>
                                                </tr>
                                                <!-- /ko -->
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="tab-pane fade" data-bind="css: { 'in active': $root.isListDefaultView() }" id="list">
            @if (Model.IsAdmin)
                {
                <button class="btn btn-default noPrint" data-bind="visible: viewMode() && $root.selectedLeague() > 0, click: $root.enterAddGameModeFromListView"><span class="glyphicon glyphicon-plus"></span> add game</button>
                }
            <table class="table table-striped table-bordered" data-bind="visible: viewMode() && !loadingSchedule()">
                <tbody data-bind="foreach: gameMonth">
                    <!-- ko foreach: $data -->
                    <!-- ko if: games().length -->
                    <!-- ko if: date().getMonth() == $root.currentDate().getMonth() -->
                    <tr>
                        <td colspan="8" data-bind="html: date.text"></td>
                    </tr>
                    <!-- ko foreach: games -->
                    <tr>
                        <!-- ko if: $root.selectedLeague() == 0 -->
                        <td data-bind="html: LeagueName"></td>
                        <!-- /ko -->
                        <td data-bind="html: GameDate.TimeText"></td>
                        <td>
                            <a data-bind="html: FieldName"></a>
                        </td>
                        <td>
                            <!-- away Team-->
                            <a data-bind="html: AwayTeamName, attr: {href: AwayTeamId.href}"></a>

                        </td>
                        <td>
                            <!-- away team score-->
                            <span data-bind="visible: GameStatus.isFinalScore, html: AwayScore"></span>
                        </td>
                        <td>
                            <!-- Home Team-->
                            at <a data-bind="html: HomeTeamName, attr: {href: AwayTeamId.href}"></a>
                        </td>
                        <td>
                            <!-- home team score-->
                            <span data-bind="visible: GameStatus.isFinalScore, html: HomeScore"></span>
                        </td>
                        <td>
                            <span data-bind="visible: GameStatus.isFinal, html: GameStatus.Text"></span>
                            <!-- ko if: GameStatus.isFinal() && HasGameRecap() -->
                            <a class="btn btn-success btn-xs noPrint" data-bind="click: $root.popupGameRecap">recap</a>
                            <!-- /ko -->
                        </td>
                        @if (Model.IsAdmin)
                        {
                            <td class="noPrint">
                                <div class="btn-group">
                                    <button type="button" class="btn btn-default dropdown-toggle btn-xs" data-toggle="dropdown">
                                        <span class="glyphicon glyphicon-edit"></span> <span class="caret"></span>
                                    </button>
                                    <ul class="dropdown-menu" role="menu">
                                        <li><a data-bind="visible: $root.selectedLeague() > 0, click: $root.editGame"><span class="glyphicon glyphicon-edit"></span> edit</a></li>
                                        <li><a data-bind="click: $root.deleteGame"><span class="glyphicon glyphicon-remove"></span> delete</a></li>
                                        <li class="divider"></li>
                                        <li><a data-bind="click: $root.enterGameResults" title="enter game results"><span class="glyphicon glyphicon-bullhorn"></span> result</a></li>
                                    </ul>
                                </div>
                            </td>
                        }
                    </tr>
                    <!-- /ko -->
                    <!-- /ko -->
                    <!-- /ko -->
                    <!-- /ko -->
                </tbody>
            </table>
        </div>
    </div>

    </div>

@section Scripts {

@Scripts.Render("~/bundles/knockout")

<script type="text/javascript" src="~/Areas/Baseball/Scripts/entergameresults.js"></script>
<script type="text/javascript" src="~/Areas/Baseball/Scripts/schedule.js"></script>

<script type="text/javascript">

    $(document).ready(function () {

        var allUmpires = [];

        @foreach (var f in Model.Umpires)
        {
            <text>
            allUmpires.push({
                Id: @f.Id,
                Name: '@f.FullName'
            });
            </text>
        }

        initScheduleViewModel(@Model.AccountId.ToString().ToLower(), @Model.IsAdmin.ToString().ToLower(), allUmpires);
    });

</script>



}