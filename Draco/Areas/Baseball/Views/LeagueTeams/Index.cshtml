@model SportsManager.Baseball.ViewModels.LeagueTeamsViewModel
@using System.Web.Optimization;

@using GMS.Web.Mvc.Html;

@{
    ViewBag.Title = @Model.AccountName + " Teams";
}

@section head {
    @Styles.Render("~/Content/themes/base/css")
}

<div class="jumbotron">
    <h1>@ViewBag.Title.</h1>
</div>

<div class="container-fluid">
    @foreach (var league in Model.Leagues)
    {
        <div class="row">
            <h2>@league.Name</h2>

            @foreach (var division in Model.Divisions(league.Id))
            {
                <div class="col-md-4">
                    <h3>@division.Name</h3>

                    <div class="list-group">
                        @foreach (var team in Model.GetDivisionTeams(division.Id))
                        {
                            <a class="list-group-item" href='@Url.Action("Index", "Team", new { area = "baseball", accountId = Model.AccountId, id = team.Id }, null)'>
                                <img onerror="this.style.display = 'none';" src="@team.TeamLogoURL" class="img-rounded" />
                                <h4 style="display:inline-block">@team.Name</h4>
                            </a>
                        }
                    </div>
                </div>
            }
        </div>
    }
</div>

