@using System.Web.Optimization
@model SportsManager.Baseball.ViewModels.LeagueFieldsViewModel

@{
	ViewBag.Title = Model.AccountName + " Fields";
}

@section head {

<script charset="UTF-8" type="text/javascript" src="http://ecn.dev.virtualearth.net/mapcontrol/mapcontrol.ashx?v=7.0">
</script>

<style type="text/css">
    .map {
        position: absolute;
        width: 100%;
        height: 100%;
    }

    .Flexible-container {
        position: relative;
        padding-bottom: 56.25%;
        padding-top: 30px;
        height: 0;
        overflow: hidden;
    }

        .Flexible-container iframe,
        .Flexible-container object,
        .Flexible-container embed {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
        }
</style>
}

<div class="jumbotron">
    @Header.DisplayHeader("Fields", Model.AccountName, Model.AccountLogoUrl)
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-4">
            <div id="fields" class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title" style="float: left;">Fields</h3>

                    @if (Model.IsAdmin)
                    {
                        <button type="button" class="btn btn-default" style="float: right" data-bind="click: startFieldAdd" title="add field"><span class="glyphicon glyphicon-plus"></span></button>
                    }

                    <div style="clear:both"></div>
                </div>

                <div class="panel-body">

                    @if (Model.IsAdmin)
                    {
                        <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                        <h4 class="modal-title" id="deleteModalLabel">Confirm Delete Field</h4>
                                    </div>
                                    <div class="modal-body" id="deleteModalBody">
                                        You are about to delete a field. You cannot undo this operation. Are you sure you want to continue?
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-danger" data-dismiss="modal" id="confirmDeleteBtn">Continue</button>
                                        <button type="button" class="btn btn-primary" data-dismiss="modal">Cancel</button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <form onsubmit="return false;" style="display:none" data-bind="visible: !viewMode(), with: editingField">
                            <div class="form-group">
                                <label for="_editFieldName" class="control-label">Field Name</label>
                                <input id="_editFieldName" type="text" class="form-control" data-bind="value: Name" />
                            </div>

                            <div class="form-group">
                                <label for="_editFieldShortName" class="control-label">Short Name (4 characters)</label>
                                <input id="_editFieldShortName" type="text" class="form-control" data-bind="value: ShortName" />
                            </div>

                            <div class="form-group">
                                <label for="_editFieldLocation" class="control-label">Find address or click on map to set field location</label>
                                <button type="button" class="btn btn-primary" data-bind="click: onFindLocation"><span class="glyphicon glyphicon-search"></span></button>
                                <div data-bind="visible: $root.foundLocations().length">
                                    <div class="list-group" data-bind="foreach: $root.foundLocations">
                                        <a href="#" data-bind="click: $root.pinEditLocation" class="list-group-item"><span data-bind="html: name"></span></a>
                                    </div>

                                    <button class='btn btn-default' data-bind="click: $root.clearLocations"><span class="glyphicon glyphicon-chevron-up"></span></button>

                                </div>
                                @*<input id="recenter" type="button" class="form-control" onclick="onRecenterMap();" value="Recenter" />*@
                            </div>

                            <div class="form-group">
                                <label for="_editFieldAddress" class="control-label">Address</label>
                                <input id="_editFieldAddress" type="text" class="form-control" data-bind="value: Address" />
                            </div>

                            <div class="form-group">
                                <label for="_editFieldCity" class="control-label">City</label>
                                <input id="_editFieldCity" type="text" class="form-control" data-bind="value: City" />
                            </div>

                            <div class="form-group">
                                <label for="_editFieldState" class="control-label">State</label>
                                <input id="_editFieldState" type="text" class="form-control" data-bind="value: State" />
                            </div>

                            <div class="form-group">
                                <label for="_editFieldZip" class="control-label">Zip</label>
                                <input id="_editFieldZip" type="text" class="form-control" data-bind="value: ZipCode" />
                            </div>

                            <div class="form-group">
                                <label for="_editFieldRainoutNumber" class="control-label">Rainout Number</label>
                                <input id="_editFieldRainoutNumber" type="tel" class="form-control" data-bind="value: RainoutNumber" />
                            </div>


                            <div class="form-group">
                                <label for="_editFieldDirections" class="control-label">Directions</label>
                                <textarea id="_editFieldDirections" rows="6" class="form-control" data-bind="value: Directions"></textarea>
                            </div>

                            <div class="form-group">
                                <label for="_editFieldComments" class="control-label">Comments</label>
                                <textarea rows="3" id="_editFieldComments" class="form-control" data-bind="value: Comment"></textarea>
                            </div>

                            <div class="form-group">
                                <button class='btn btn-primary' data-bind="click: $root.saveEdit"><span class="glyphicon glyphicon-ok"></span></button>
                                <button class='btn btn-danger' data-bind="click: $root.cancelEditMode"><span class="glyphicon glyphicon-remove"></span></button>
                            </div>
                        </form>
                    }

                    <div data-bind="visible: viewMode">
                        <select data-container="body" data-bind="selectPicker: selectedFieldId, selectPickerOptions: { optionsArray: fields }, optionsText: 'Name', optionsValue: 'Id'"></select>
                        <button type="button" class="btn btn-default" style="margin-top:-10px" data-bind="click: viewAllFields" title="fit all fields on map"><span class="fa fa-compass"></span></button>
                        <div data-bind="if: selectedFieldId() !== undefined">
                            <div data-bind="with: selectedField">
                                <h3><span data-bind="html: Name"></span> <small>(<span data-bind="html: ShortName"></span>)</small></h3>
                                <address>
                                    <span data-bind="html: Address, visible: Address"></span><br />
                                    <span data-bind="html: City, visible: City"></span>
                                    <span data-bind="visible: City() && State()">, </span>
                                    <span data-bind="html: State, visible: State"></span>&nbsp;
                                    <span data-bind="html: ZipCode, visible: ZipCode"></span>
                                    <br />
                                    <div data-bind="visible: RainoutNumber">
                                        <abbr data-toggle="tooltip" title="Rainout Number">R:</abbr>
                                        <span data-bind="html: RainoutNumber"></span>
                                    </div>
                                </address>


                                <p data-bind="html: Directions, visible: Directions"></p>
                                <p data-bind="html: Comment, visible: Comment"></p>

                                <button data-bind="click: $root.centerOnMap, visible: Latitude() && Longitude()" class="btn btn-default" title="zoom field on map"><span class="glyphicon glyphicon-map-marker"></span></button>

                                @if (Model.IsAdmin)
                                {
                                <button class='btn btn-default' data-bind="click: $root.startEditField"><span class="glyphicon glyphicon-edit"></span></button>
                                <button class='btn btn-danger' data-bind="click: $root.deleteField"><span class="glyphicon glyphicon-remove"></span></button>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
                
        <div class="col-md-8">
            <div class="Flexible-container">
                <div id="theMap" class="map"></div>
            </div>
        </div>
    </div>
</div>

@section scripts {

@Scripts.Render("~/bundles/knockout")
<script type="text/javascript" src="~/Scripts/jquery.maskedinput-1.3.1.min.js"></script>
<script type="text/javascript" src="~/Scripts/jquery.validate.min.js"></script>

<script src="@Url.Content("~/Scripts/Map.js")" type="text/javascript"></script>

<script type="text/javascript">

    $(document).ready(function () {
        initFieldsViewModel(@Model.AccountId, @Model.IsAdmin.ToString().ToLower(), @ViewBag.SelectedField);

    });

</script>

}
