@model SportsManager.Baseball.ViewModels.Controllers.RosterViewModel

<div class="panel panel-primary" id="roster">
    <div class="panel-heading">
        <h3 class="panel-title" style="float: left;">Roster</h3>

        @if (Model.IsAdmin)
        {
            <button type="button" class="btn btn-default" style="float: right" data-bind="click: showSignPlayer" title="sign player"><span class="glyphicon glyphicon-pencil"></span></button>
            <a href='@Url.Action("AddressList", "Team", new { area = "baseball", accountId = Model.AccountId, id = Model.TeamId }, null)' style="float: right" class="btn btn-default" title="address list">
                <span class="glyphicon glyphicon-list-alt"></span>
            </a>
        }

        <div style="clear:both"></div>
    </div>

    <div class="panel-body">

        @if (Model.IsAdmin)
        {
            <div class="modal fade" id="deletePlayerModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                            <h4 class="modal-title">Confirm Delete Player</h4>
                        </div>
                        <div class="modal-body">
                            You are about to delete a player. All data associated with the player will be permanently deleted. You cannot undo this operation. Are you sure you want to continue?
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-danger" data-dismiss="modal" id="confirmPlayerDeleteBtn">Continue</button>
                            <button type="button" class="btn btn-primary" data-dismiss="modal">Cancel</button>
                        </div>
                    </div>
                </div>
            </div>

            //Sign an existing player
            <div class="row" data-bind="visible: signPlayerVisible">
                <form>
                    <div class="form-group">
                        <h3 class="control-label col-sm-12">sign a player</h3>
                        <div class="col-sm-12">
                            <div class="input-group">
                                <input type="text" class="form-control pull-left" data-bind="typeahead: { datasets: { source: getPlayers, async: true, display: 'label', limit: 10 }, target: selectedPlayer, options: { highlight: true } }" placeholder="enter player name" />

                                <span class="input-group-btn">
                                    <button class="btn btn-primary pull-left" data-bind="click: signPlayer, enable: isPlayerSelected" title="sign player"><span class="glyphicon glyphicon-ok"></span></button>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <h3 class="control-label col-sm-12">create a player</h3>
                        <div class="col-sm-4">
                            <input class="form-control" data-bind="value: newPlayerFirstName" placeholder="first name" />
                        </div>
                        <div class="col-sm-4">
                            <input class="form-control" data-bind="value: newPlayerMiddleName" placeholder="middle" />
                        </div>
                        <div class="col-sm-4">
                            <div class="input-group">
                                <input class="form-control" data-bind="value: newPlayerLastName" placeholder="last name" />
                                <span class="input-group-btn">
                                    <button class="btn btn-primary" title="create player" data-bind="click: createPlayer"><span class="glyphicon glyphicon-plus"></span></button>
                                </span>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <hr />
        }
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th></th>
                        <th>No</th>
                        <th>
                            Name
                            (<span data-bind="text: players().length"></span> Players)
                        </th>
                        @if (Model.IsAdmin || Model.IsTeamAdmin)
                        {
                            <th>Age</th>
                            <th>Signed</th>
                            if (Model.TrackGamesPlayed)
                            { 
                            <th>
                                <abbr title="Games Played">GP</abbr>
                            </th>
                            }
                            if (Model.IsAdmin)
                            { 
                                <th>Actions</th>
                            }
                            else if (Model.IsTeamAdmin)
                            {
                                <th></th>
                            }
                        }
                    </tr>
                </thead>
                <tbody data-bind="foreach: players">
                    <tr data-bind="if: $root.currentEditPlayer().Id() != Id()">
                        <td class="col-sm-1">
                            <img onerror="this.style.display = 'none';" data-bind="attr: { src: Contact.PhotoURL }" class="img-rounded" />
                            @if (Model.IsTeamPhotoAdmin)
                            {
                                <span data-bind="imageUploader: Contact.fileUploaderUrl" class="btn btn-default fileinput-button" title="upload player photo">
                                    <i class="glyphicon glyphicon-upload"></i>
                                    <input class="form-control" type="file" data-maxfilesize="1">
                                </span>
                            }
                        </td>
                        <td class="col-sm-2">
                            <span data-bind="html: PlayerNumber"></span>
                            @if (Model.IsTeamAdmin)
                            {
                                <button class="btn btn-default btn-sm" data-bind="click: $parent.editPlayer"><span class="glyphicon glyphicon-edit"></span></button>
                            }
                        </td>
                        <td @if (Model.IsAdmin) { <text> class="col-sm-4" </text>     } else if (Model.IsTeamAdmin) { <text> class="col-sm-6" </text>    } else { <text> class="col-sm-8" </text>     }>
                            <a data-bind="html: Contact.FullName, attr: { href: window.config.rootUri + '/baseball/player/season/@Model.AccountId/' + Id() }"></a>
                            @if (Model.IsAdmin)
                            {
                                <form class="form-horizontal" role="form">
                                    @if (Model.ShowWaiverStatus)
                                    {
                                        <div class="form-group" style="margin:0px">
                                            <div class="checkbox">
                                                <div class="col-sm-12">
                                                    <label for="uniqueFor: Id" class="control-label">
                                                        Waiver
                                                        <span style="margin-left:10px" data-bind="html: SubmittedWaiver() ? 'yes' : 'no'"></span>
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                    }

                                    @if (Model.ShowIdStatus)
                                    {
                                        <div class="form-group" style="margin: 0px">
                                            <div class="checkbox">
                                                <div class="col-sm-12">
                                                    <label for="uniqueFor: Id" class="control-label">
                                                        License
                                                        <span style="margin-left:4px" data-bind="html: SubmittedDriversLicense() ? 'yes' : 'no'"></span>
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                    <div class="form-group">
                                        <label class="control-label col-sm-5" data-bind="uniqueFor: Id">Aff. Dues</label>
                                        <div class="col-sm-7">
                                            <p class="form-control-static" data-bind="html: AffiliationDuesPaid"></p>
                                        </div>
                                    </div>
                                </form>
                            }
                        </td>

                        @if (Model.IsAdmin || Model.IsTeamAdmin)
                        {
                            <td class="col-sm-1" data-bind="html: Contact.Age"></td>

                            <td class="col-sm-2">
                                <span data-bind="html: DateAdded.Formatted"></span>
                            </td>
                            if (Model.TrackGamesPlayed)
                            { 
                                <td class="col-sm-1" data-bind="html: GamesPlayed"></td>
                            }
                            <td class="col-sm-1">
                                @if (Model.IsAdmin)
                                { 
                                    <button class="btn btn-default btn-sm" data-bind="click: $parent.editPlayer" title="edit player"><span class="glyphicon glyphicon-edit"></span></button>
                                    <button class="btn btn-warning btn-sm" data-bind="click: $parent.releasePlayer" title="release player"><span class="glyphicon glyphicon-minus"></span></button>
                                    <button class="btn btn-danger btn-sm" data-bind="click: $parent.deletePlayer" title="delete player"><span class="glyphicon glyphicon-remove"></span></button>
                                }
                            </td>
                        }
                    </tr>


                    @if (Model.IsAdmin || Model.IsTeamAdmin)
                    {
                        <!-- ko if: $root.currentEditPlayer().Id() == Id()-->
                        <tr>
                            <td class="col-sm-1">
                                <img onerror="this.style.display = 'none';" data-bind="attr: { src: Contact.PhotoURL }" class="img-rounded" />
                            </td>

                            <td class="col-sm-2">
                                <input class="form-control" data-bind="value: $root.currentEditPlayer().PlayerNumber" type="number" />
                                @if (Model.IsTeamAdmin)
                                {
                                    <button class="btn btn-success btn-xs" data-bind="click: $parent.editPlayerNumber"><span class="glyphicon glyphicon-ok"></span></button>
                                    <button class="btn btn-danger btn-xs" data-bind="click: $parent.cancelEditPlayer"><span class="glyphicon glyphicon-remove"></span></button>
                                }
                            </td>
                            <td @if (Model.IsAdmin) { <text> class="col-sm-4" </text> } else { <text> class="col-sm-6" </text> } >
                                <span data-bind="html: Contact.FullName"></span>
                                @if (Model.IsAdmin)
                                {
                                    <form class="form-horizontal" role="form" data-bind="with: $root.currentEditPlayer()">
                                        @if (Model.TrackPlayerWaiver)
                                        {
                                            <div class="form-group" style="margin:0px">
                                                <div class="checkbox">
                                                    <div class="col-sm-12">
                                                        <label for="uniqueFor: Id" class="control-label">
                                                            <input type="checkbox" data-bind="checked: SubmittedWaiver, uniqueId: Id" />
                                                            Waiver
                                                        </label>
                                                    </div>
                                                </div>
                                            </div>
                                        }

                                        @if (Model.TrackIdSubmitted)
                                        {
                                            <div class="form-group" style="margin: 0px">
                                                <div class="checkbox">
                                                    <div class="col-sm-12">
                                                        <label for="uniqueFor: Id" class="control-label">
                                                            <input type="checkbox" data-bind="checked: SubmittedDriversLicense, uniqueId: Id" />
                                                            License
                                                        </label>
                                                    </div>
                                                </div>
                                            </div>
                                        }

                                        <div class="form-group">
                                            <label class="control-label col-sm-12" data-bind="uniqueFor: Id">Aff. Dues</label>
                                            <div class="col-sm-12">
                                                <input type="text" class="form-control" data-bind="value: AffiliationDuesPaid, uniqueId: Id" />
                                            </div>
                                        </div>
                                    </form>
                                }
                        </td>

                            <td class="col-sm-1" data-bind="html: Contact.Age"></td>
                            <td class="col-sm-2">
                                <span data-bind="html: DateAdded.Formatted"></span>
                            </td>
                            <td class="col-sm-1">
                                @if (Model.IsAdmin)
                                {
                                    <button class="btn btn-success btn-sm" data-bind="click: $parent.savePlayer"><span class="glyphicon glyphicon-ok"></span></button>
                                    <button class="btn btn-danger btn-sm" data-bind="click: $parent.cancelEditPlayer"><span class="glyphicon glyphicon-remove"></span></button>
                                }
                            </td>
                        </tr>
                        <!-- /ko -->
                    }

                    @if (Model.IsAdmin && Model.ShowUserInfoOnRosterPage)
                    {
                        <!-- ko if: $root.currentEditPlayer().Id() != Id() -->
                        
                        <tr>
                            <td colspan="2">
                                <address>
                                    <!-- ko if: Contact.StreetAddress -->
                                    <span data-bind='html: Contact.StreetAddress'></span><br />
                                    <!-- /ko -->
                                    <span data-bind='html: Contact.City'></span>
                                    <!-- ko if: Contact.City() && Contact.State() -->
                                    <span>,</span>
                                    <!-- /ko -->
                                    <span data-bind='html: Contact.State'></span>
                                    <span data-bind='html: Contact.Zip'></span>
                                </address>
                            </td>
                            <td colspan="2">
                                <!-- ko if: Contact.Email -->
                                <a data-bind="html: Contact.Email, attr: { href: 'mailto:' + Contact.Email() }"></a><br />
                                <!-- /ko -->
                                <!-- ko if: Contact.Phone2 -->
                                <abbr title="Cell Phone">C: </abbr><span data-bind="html: Contact.Phone2"></span><br />
                                <!-- /ko -->
                                <!-- ko if: Contact.Phone3 -->
                                <abbr title="Work Phone">W: </abbr><span data-bind="html: Contact.Phone3"></span><br />
                                <!-- /ko -->
                                <!-- ko if: Contact.Phone1 -->
                                <abbr title="Home Phone">H: </abbr><span data-bind="html: Contact.Phone1"></span>
                                <!-- /ko -->
                            </td>
                            <td colspan="2">
                                <abbr title="Birthdate">B: </abbr><span data-bind="html: Contact.DateOfBirth.Formatted"></span><br />
                                <abbr title="First Year">FY: </abbr><span data-bind="html: FirstYear"></span><br />
                                <abbr title="Gender">G: </abbr><span data-bind="html: Contact.IsFemale() ? 'Female' : 'Male'"></span><br />

                            </td>
                        </tr>
                        
                        <!-- /ko -->

                        <!-- ko if: $root.currentEditPlayer().Id() == Id()-->

                        <tr>
                            <td colspan="2">
                                    <input class="form-control" type="text" data-bind='value: $root.currentEditPlayer().Contact.StreetAddress' placeholder="address" />
                                    <input class="form-control" type="text" data-bind='value: $root.currentEditPlayer().Contact.City' placeholder="city"/>
                                    <select id="StatePicker" data-bind="selectPicker: $root.currentEditPlayer().Contact.State, selectPickerOptions: {optionsArray: $root.availableStates}, optionsText: 'name', optionsValue: 'abbrev', optionsCaption: 'Choose state...'"></select>
                                    <input class="form-control" type="text" data-bind='value: $root.currentEditPlayer().Contact.Zip' placeholder="zip code"/>
                            </td>
                            <td colspan="2">
                                <input class="form-control" type="text" data-bind="value: $root.currentEditPlayer().Contact.Email" placeholder="email address"/>
                                <abbr title="Cell Phone">C: </abbr><input class="form-control" type="text" data-bind="phoneNumber: $root.currentEditPlayer().Contact.Phone2" placeholder="cell phone" />
                                <abbr title="Work Phone">W: </abbr><input class="form-control" type="text" data-bind="phoneNumber: $root.currentEditPlayer().Contact.Phone3" placeholder="work phone" />
                                <abbr title="Home Phone">H: </abbr><input class="form-control" type="text" data-bind="phoneNumber: $root.currentEditPlayer().Contact.Phone1" placeholder="home phone" />
                            </td>
                            <td colspan="2">
                                <abbr title="Birthdate">B: </abbr><input class="form-control" type="text" data-bind="datepicker: $root.currentEditPlayer().Contact.DateOfBirth, datepickerOptions: { format: 'MM dd, yyyy', autoclose: true, startView: 2 }" />
                                <select id="FirstYearSelect" data-bind="selectPicker: $root.currentEditPlayer().FirstYear, selectPickerOptions: { optionsArray: $root.availableYears }, optionsText: 'name', optionsValue: 'name', optionsCaption: 'Choose first year...'"></select><br />

                                <select id="GenderSelect" data-bind="selectPicker: $root.currentEditPlayer().Contact.IsFemale, selectPickerOptions: { optionsArray: $root.availableGenders }, optionsText: 'name', optionsValue: 'id', optionsCaption: 'Choose gender...'"></select><br />

                            </td>
                        </tr>

                        <!-- /ko -->
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
