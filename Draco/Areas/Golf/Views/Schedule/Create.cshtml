@model SportsManager.Golf.ViewModels.GolfMatchViewModel

@{
    ViewBag.Title = ViewData["Title"];
}

@section menu {
}

@section head {
	<link href="@Url.Content("~/Content/jquery-ui-timepicker.css")" rel="stylesheet" type="text/css" />
}


<h1>@ViewBag.Title</h1>

@{
    Html.EnableClientValidation();   
}

@using (Html.BeginForm()) {

    @Html.EditorForModel()
    
    if ((bool)ViewData["ForCreate"])
    { 
        <input type="checkbox" id="continueWithMore" checked="yes" name="continueWithMore" value="1" /> <text>Add Another</text><br />
    }
    
    <input type="submit" value="Save" />
    @Html.ActionLink("Cancel", "Index", "Schedule", new { accountId = ViewBag.AccountId, seasonId = ViewBag.SeasonId, id = ViewBag.FlightId }, null)
}


@section scripts {
<script src='@Url.Content("~/Scripts/jquery.ui.timepicker.js")' type='text/javascript'></script>

<script type="text/javascript">
    $(document).ready(function () {
        $(function () {
            $('#MatchDate').datepicker({
                duration: '',
                showTime: true,
                constrainInput: false
            });

            $('#MatchTime').timepicker({
                showPeriod: true,
                showLeadingZero: false
            });
        });
    });
</script>

}