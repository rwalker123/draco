@model SportsManager.Golf.ViewModels.TeamViewModel
@using MvcContrib.UI.Grid;

@{
    ViewBag.Title = @Model.Name;
    Layout = "~/Views/Shared/_Layout.Mobile.cshtml";
}

<table>
<tr>
<th></th>
<th>Handicap</th>
</tr>
@foreach (var tm in Model.TeamMembers)
{
    <tr>
    <td><a href='@Url.Action("Index", "Player", new { accountId = ViewData["AccountId"], seasonId = ViewData["SeasonId"], id = tm.Id })' data-role="button" data-theme="b">@tm.FullName</a></td>
    <td style="text-align:center;" data-role="button">@tm.HandicapIndex</td>
    </tr>
}
</table>

<h4>Upcoming Matches</h4>

@if (!Model.UpcomingMatches.Any())
{ 
    <p>No Upcoming matches found.</p>
}
else
{
    Html.RenderPartial("_ShowMatches", Model.UpcomingMatches); 
}

<h4>Completed Matches</h4>

@if (!Model.CompletedMatches.Any())
{ 
    <p>No completed matches found.</p>
}
else
{
    Html.RenderPartial("_ShowMatches", Model.CompletedMatches); 
}
