{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "esnext",
      "dom"
    ],
    "allowJs": false,
    "jsx": "react-jsx",
    "strict": true,
    "noImplicitOverride": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "bundler",
    "module": "esnext",
    "types": [
      "vitest/globals",
      "react",
      "react-native"
    ],
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@/": [
        "./src/*"
      ],
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "App.tsx",
    "src",
    "vitest.setup.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build"
  ],
  "extends": "./tsconfig.base.json"
}
